<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_first_background"
    android:windowActionBar="false"
    android:windowNoTitle="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:fontFamily="cursive"
                android:gravity="center_vertical"
                android:text="Regístrate"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                android:textStyle="bold|italic"
                android:typeface="sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_formulario_dni"
                style="@style/cardFormulary">
                <EditText
                    android:id="@+id/editText_dni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:hint="Introduce tu DNI"
                    android:importantForAutofill="yes"
                    android:inputType="textPersonName"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_formulario_clave"
                style="@style/cardFormulary">
                <EditText
                    android:id="@+id/editText_clave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="Introduce la clave de tu comunidad"
                    android:importantForAutofill="yes"
                    android:layout_margin="8dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    tools:ignore="TextFields" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_init_account_username"
                style="@style/cardFormulary">
                <EditText
                    android:id="@+id/editText_init_account_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="8dp"
                    android:hint="Introduce un nombre de usuario"
                    android:importantForAutofill="yes"
                    android:inputType="textPersonName"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_init_account_password"
                style="@style/cardFormulary">
                <EditText
                    android:id="@+id/editText_init_account_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="Introduce tu contraseña"
                    android:importantForAutofill="yes"
                    android:layout_margin="8dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    tools:ignore="TextFields" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_init_account_repite_password"
                style="@style/cardFormulary">
                <EditText
                    android:id="@+id/editText_init_account_repite_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="Repite tu contraseña"
                    android:importantForAutofill="yes"
                    android:layout_margin="8dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    tools:ignore="TextFields" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/button_init_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="30dp"
                android:text="¡Comencemos!"
                android:textColor="@color/white"
                app:backgroundTint="@color/teal_700"
                app:layout_constraintBottom_toBottomOf="@id/editText_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>